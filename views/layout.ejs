<!DOCTYPE html>
<html>
<head>
    <title><%= sails.config.settings.basic.siteName %></title>
    <meta name="description"  content="<%= sails.config.settings.basic.description %>" />

    <% if (sails.config.settings.openGraph.enable) { %>
        <!-- Twitter Card data -->
        <meta name="twitter:card" content="<%= sails.config.settings.openGraph.twitter.card %>">
        <meta name="twitter:site" content="<%= sails.config.settings.openGraph.twitter.site %>">
        <meta name="twitter:title" content="<%= sails.config.settings.openGraph.twitter.title %>">
        <meta name="twitter:description" content="<%= sails.config.settings.openGraph.twitter.description %>">
        <meta name="twitter:creator" content="<%= sails.config.settings.openGraph.twitter.creator %>">
        <meta name="twitter:image" content="<%= sails.config.settings.openGraph.twitter.image %>">

        <!-- Open Graph data -->
        <meta property="og:title" content="<%= sails.config.settings.openGraph.facebook.title %>" />
        <meta property="og:type" content="<%= sails.config.settings.openGraph.facebook.type %>" />
        <meta property="og:url" content="<%= sails.config.settings.openGraph.facebook.url %>" />
        <meta property="og:image" content="<%= sails.config.settings.openGraph.facebook.image %>" />
        <meta property="og:description" content="<%= sails.config.settings.openGraph.facebook.description %>" />
        <meta property="og:site_name" content="<%= sails.config.settings.openGraph.facebook.site_name %>" />
    <% } %>

    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.png">

    <link href='http://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/components/fontawesome/css/font-awesome.min.css">

    <!--STYLES-->
    <link rel="stylesheet" href="/styles/login.css">
    <link rel="stylesheet" href="/styles/main.css">
    <!--STYLES END-->
</head>

<body>
    <div id="wrapper">
    <%- body %>
    </div>

    <script src="/components/jquery/dist/jquery.min.js"></script>
    <script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/components/underscore/underscore.js"></script>
    <script src="/components/moment/moment.js"></script>

    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/map.js"></script>
    <script src="/js/main.js"></script>
    <!--SCRIPTS END-->
    </body>
</html>
